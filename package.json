{
  "name": "semantic-pr-composer",
  "version": "1.0.0",
  "private": true,
  "description": "Compose a pull request description and title based on a semantic branch name",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mateoguzmana/semantic-pr-composer.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "Mateo Guzm√°n",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mateoguzmana/semantic-pr-composer/issues"
  },
  "homepage": "https://github.com/mateoguzmana/semantic-pr-composer",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "cross-fetch": "^3.1.5"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.56.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.37.0",
    "eslint-plugin-github": "^4.7.0",
    "eslint-plugin-jest": "^27.2.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.7",
    "ts-jest": "^27.1.2",
    "typescript": "^4.9.5"
  }
}
